{
  "version": 2,
  "buildCommand": "echo 'No build required'",
  "outputDirectory": "src",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/src/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/src/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
