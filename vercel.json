{
  "version": 2,
  "buildCommand": "echo 'Static site'",
  "outputDirectory": "src",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "/src/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/src/js/$1"
    },
    {
      "src": "/(.*\\.html)",
      "dest": "/src/$1"
    },
    {
      "src": "/",
      "dest": "/src/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/src/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/src/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "env": {
    "PINATA_JWT": "@pinata-jwt"
  }
}
